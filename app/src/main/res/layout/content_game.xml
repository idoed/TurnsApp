<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.calcounterapplication.com.turnsapp.UI.GameActivity"
    tools:showIn="@layout/activity_game">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/GameBoardFrag"></FrameLayout>
<FrameLayout
    android:id="@+id/TheGameFrame"
    android:layout_width="match_parent"
    android:layout_height="470dp"

    >

</FrameLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/TheGameFrame"
        android:text="Start The Game"
        android:layout_alignRight="@id/TheGameFrame"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@null"
        android:textColor="#87CEFA"
        android:id="@+id/startingTheGameBut"
        />

</android.widget.RelativeLayout>

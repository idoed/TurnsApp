<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"

    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:src="@drawable/ic_more_vert_black_18dp" />

    <CheckBox
        android:id="@+id/checkbox_draggable_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/enterName"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="13sp"
        android:text="Enter Your Name"
        android:backgroundTintMode="src_in"
        android:backgroundTint="#F4A460"/>


    <TextView
        android:id="@+id/month_item_draglist"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"

        android:background="@null"/>




    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileButtPic"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/profile"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/delete_draggable_item"
        android:src="@drawable/ic_more_vert_black_18dp"
        android:visibility="visible"
        android:background="@null"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



</LinearLayout>

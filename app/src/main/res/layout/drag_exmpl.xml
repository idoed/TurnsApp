<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"

    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:src="@drawable/ic_more_vert_black_18dp" />

    <CheckBox
        android:id="@+id/checkbox_draggable_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/enterName"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="13sp"
        android:text="Enter Your Name"/>


    <TextView
        android:id="@+id/month_item_draglist"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"

        android:background="@null"/>

    <!-- empty view to fill space from text to the end (delete button)-->

    <ImageButton
        android:layout_marginLeft="15dp"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:src="@drawable/profile"
        android:background="@drawable/bg_circle_pic"
        android:id="@+id/profileButtPic"
        />
    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/delete_draggable_item"
        android:src="@drawable/ic_more_vert_black_18dp"
        android:visibility="invisible"
        android:background="@null"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



</LinearLayout>
